---
import "../styles/neumorphic.css";
import { SITE_TITLE } from "../consts";
import BaseLayout from "./BaseLayout.astro";

interface Props {
  title: string;
  description?: string;
}
const { title, description = "Panel de administración" } = Astro.props;
---

<BaseLayout title={title} description={description}>
  <div class="admin-layout">
    <aside class="sidebar">
      <div class="site-logo">
        <img src="/logo.png" alt="Logo" />
        <!-- <h1>{SITE_TITLE}</h1> -->
      </div>
      <nav>
        <div class="nav-section">
          <h6 class="nav-section-title">PRINCIPAL</h6>
          <ul class="nav-menu">
            <li>
              <a href="/admin" class="nav-link active">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                  style="width:18px;height:18px;margin-right:0.75rem;"
                >
                  <rect x="3" y="3" width="7" height="7"></rect>
                  <rect x="14" y="3" width="7" height="7"></rect>
                  <rect x="14" y="14" width="7" height="7"></rect>
                  <rect x="3" y="14" width="7" height="7"></rect>
                </svg>
                <span>Dashboard</span>
              </a>
            </li>
            <li>
              <a href="/admin/posts" class="nav-link">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                >
                  <path
                    d="M11 4H4a2 2 0 0 0-2 2v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2v-7"
                  ></path>
                  <path
                    d="M18.5 2.5a2.121 2.121 0 0 1 3 3L12 15l-4 1 1-4 9.5-9.5z"
                  ></path>
                </svg>
                <span>Posts</span>
              </a>
            </li>
            <li>
              <a href="/admin/categories" class="nav-link">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                >
                  <path
                    d="M22 19a2 2 0 0 1-2 2H4a2 2 0 0 1-2-2V5a2 2 0 0 1 2-2h5l2 3h9a2 2 0 0 1 2 2z"
                  ></path>
                </svg>
                <span>Categorías</span>
              </a>
            </li>
            <li>
              <a href="/admin/users" class="nav-link">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                >
                  <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
                  <circle cx="12" cy="7" r="4"></circle>
                </svg>
                <span>Usuarios</span>
              </a>
            </li>
            <li>
              <a href="/admin/comments" class="nav-link">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  viewBox="0 0 24 24"
                  fill="none"
                  stroke="currentColor"
                  stroke-width="2"
                  stroke-linecap="round"
                  stroke-linejoin="round"
                >
                  <path
                    d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z"
                  ></path>
                </svg>
                <span>Comentarios</span>
              </a>
            </li>
          </ul>
        </div>
        <div class="nav-section">
          <h6 class="nav-section-title">CONTENIDO</h6>
          <ul class="nav-menu">
            <li>
              <a href="/admin/posts/nuevo" class="nav-link">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                  stroke-width="2"
                  style="width:18px;height:18px;margin-right:0.75rem;"
                  ><path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M12 4v16m8-8H4"></path></svg
                >
                <span>Nuevo Post</span>
              </a>
            </li>
          </ul>
        </div>
        <div class="nav-section">
          <h6 class="nav-section-title">CONFIGURACIONES</h6>
          <ul class="nav-menu">
            <li>
              <a href="/admin/roles" class="nav-link">
                <svg
                  xmlns="http://www.w3.org/2000/svg"
                  fill="none"
                  viewBox="0 0 24 24"
                  stroke="currentColor"
                  stroke-width="2"
                  style="width:18px;height:18px;margin-right:0.75rem;"
                  ><path
                    stroke-linecap="round"
                    stroke-linejoin="round"
                    d="M16 11V7a4 4 0 00-8 0v4M5 19h14a2 2 0 002-2v-5a2 2 0 00-2-2H5a2 2 0 00-2 2v5a2 2 0 002 2z"
                  ></path></svg
                >
                <span>Roles y Permisos</span>
              </a>
            </li>
          </ul>
        </div>
      </nav>
    </aside>
    <main class="dashboard-content">
      <slot />
    </main>
  </div>
</BaseLayout>

<style>
  .admin-layout {
    display: flex;
    min-height: 100vh;
    padding-top: 64px; /* Altura del header */
  }
  .sidebar {
    width: 240px;
    min-width: 220px;
    padding: 2.5rem 1.25rem 2rem 1.25rem;
    background: var(--card-bg);
    color: var(--text-color);
    position: fixed;
    height: calc(100vh - 64px);
    overflow-y: auto;
    top: 64px;
    left: 0;
    z-index: 10;
    display: flex;
    flex-direction: column;
    gap: 2.5rem;
    box-shadow: 4px 0 8px var(--neu-shadow-dark);
  }
  .site-logo {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0;
    margin-bottom: 0;
  }
  .site-logo img {
    width: 90px;
    height: auto;
    margin-bottom: 0.5rem;
  }
  .nav-section-title {
    color: var(--text-color);
    font-weight: 600;
    margin-bottom: 0.75rem;
    font-size: 0.85rem;
    letter-spacing: 1px;
    text-transform: uppercase;
    opacity: 0.7;
    margin-top: 0;
  }
  .nav-menu {
    list-style: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }
  .nav-menu li {
    margin-bottom: 0.5rem;
  }
  .nav-link {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    padding: 0.55rem 1rem;
    color: var(--text-color);
    font-size: 1rem;
    font-weight: 500;
    text-decoration: none;
    border-radius: var(--border-radius);
    transition:
      background 0.18s,
      color 0.18s;
    cursor: pointer;
    overflow: visible;
    white-space: pre-line;
    word-break: normal;
    width: 100%;
    box-sizing: border-box;
  }
  .nav-link svg {
    width: 18px;
    height: 18px;
    flex-shrink: 0;
    align-self: flex-start;
    margin-top: 2px;
    display: inline-block;
    color: var(--text-color);
    transition: color 0.18s;
  }
  .nav-link span {
    display: flex;
    align-items: center;
    line-height: 1.3;
    word-break: break-word;
    width: 100%;
  }
  .nav-link svg {
    width: 18px;
    height: 18px;
    flex-shrink: 0;
    display: inline-block;
    color: var(--text-color);
    transition: color 0.18s;
  }
  .nav-link.active {
    background: var(--primary-color);
    color: #fff;
  }
  .nav-link.active svg {
    color: #fff;
    stroke: #fff;
  }
  .nav-link:hover {
    background: var(--hover-bg);
    color: var(--primary-color);
  }
  .nav-link:hover svg {
    color: var(--primary-color);
    stroke: var(--primary-color);
  }
  .dashboard-content {
    flex: 1;
    background: var(--bg-color);
    padding-top: 2rem;
    padding: 1rem;
    margin-left: 0;
  }
  @media (min-width: 1024px) {
    .dashboard-content {
      margin-left: 240px !important;
      padding: 1.5rem;
    }
  }
  @media (max-width: 1023px) {
    .sidebar {
      position: fixed;
      left: 0;
      top: 64px;
      height: calc(100vh - 64px);
      width: 80vw;
      max-width: 320px;
      min-width: 200px;
      transform: translateX(-100%);
      box-shadow: 4px 0 8px var(--neu-shadow-dark);
      z-index: 9999;
    }
    .sidebar.open {
      transform: translateX(0);
      box-shadow: 4px 0 16px rgba(0, 0, 0, 0.18);
    }
    .dashboard-content {
      margin-left: 0;
      padding: 1rem 0.5rem 2rem 0.5rem;
      min-width: 0;
    }
    .admin-layout {
      padding-top: 64px;
    }
    .sidebar-toggle {
      display: flex;
      align-items: center;
      justify-content: center;
      position: fixed;
      top: 72px;
      left: 16px;
      z-index: 10000;
      background: var(--primary-color);
      color: #fff;
      border: none;
      border-radius: 6px;
      width: 44px;
      height: 44px;
      box-shadow: 2px 2px 8px rgba(0, 0, 0, 0.1);
      cursor: pointer;
    }
  }
  @media (min-width: 1024px) {
    .sidebar-toggle {
      display: none !important;
    }
    .sidebar {
      transform: none !important;
      position: fixed;
      left: 0;
      top: 64px;
      width: 240px;
      min-width: 220px;
      box-shadow: 4px 0 8px var(--neu-shadow-dark);
      z-index: 10;
    }
    .dashboard-content {
      margin-left: 240px;
      padding: 1.5rem;
    }
  }
  .sidebar-toggle {
    display: flex;
    background: var(--primary-color);
    color: #fff;
    border: none;
    border-radius: 6px;
    width: 44px;
    height: 44px;
    align-items: center;
    justify-content: center;
    position: fixed;
    top: 72px;
    left: 16px;
    z-index: 10000;
    box-shadow: 2px 2px 8px rgba(0, 0, 0, 0.1);
    cursor: pointer;
  }
  @media (min-width: 1024px) {
    .sidebar-toggle {
      display: none !important;
    }
  }
</style>
<script>
  // @ts-nocheck
  // Sidebar drawer responsive
  if (typeof window !== "undefined") {
    document.addEventListener("DOMContentLoaded", function () {
      var sidebar = document.querySelector(".sidebar");
      var toggle = document.getElementById("sidebarToggle");
      // @ts-ignore: ignore implicit any for event parameter
      function closeSidebarOnClickOutside(e) {
        if (!sidebar || !toggle) return;
        var target = e.target;
        if (
          sidebar.classList.contains("open") &&
          !sidebar.contains(target) &&
          !toggle.contains(target)
        ) {
          sidebar.classList.remove("open");
        }
      }
      if (toggle && sidebar) {
        toggle.addEventListener("click", function () {
          sidebar.classList.toggle("open");
        });
        document.addEventListener("click", closeSidebarOnClickOutside);
      }
    });
  }
</script>
