---
import SettingsManagementReact from './SettingsManagement';
import { pool } from '../../../db/pool';

interface SiteSettings {
  id: number;
  site_title: string;
  site_description: string;
  contact_email: string;
  posts_per_page: number;
  allow_comments: boolean;
  social_media: {
    facebook?: string;
    twitter?: string;
    instagram?: string;
    linkedin?: string;
  };
  theme_options: {
    primary_color?: string;
    secondary_color?: string;
    font_family?: string;
  };
}

// Inicializar configuraci贸n con valores por defecto
let settings: { rows: SiteSettings[] } = { rows: [] };

try {
  const client = await pool.connect();
  try {
    // Obtener configuraci贸n del sitio
    settings = await client.query(`
      SELECT * FROM configuracion
      WHERE id = 1
    `);
    
    // Si no hay configuraci贸n, crear una por defecto
    if (settings.rows.length === 0) {
      settings.rows = [{
        id: 1,
        site_title: 'Mi Blog',
        site_description: 'Un blog creado con Astro y Tailwind',
        contact_email: 'contacto@ejemplo.com',
        posts_per_page: 10,
        allow_comments: true,
        social_media: {},
        theme_options: {
          primary_color: '#007bff',
          secondary_color: '#6c757d',
          font_family: 'Poppins'
        }
      }];
    }
  } finally {
    client.release();
  }
} catch (error) {
  console.error('Error al obtener la configuraci贸n:', error);
}
