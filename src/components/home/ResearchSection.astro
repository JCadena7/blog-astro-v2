---
const services = [
{
    title: 'Marketing de Contenidos',
    description: 'Creamos contenido relevante y valioso que atrae y retiene a tu audiencia ideal.',
    icon: 'content'
  },
  {
    title: 'SEO Local',
    description: 'Optimizamos tu presencia en búsquedas locales para atraer clientes de tu área.',
    icon: 'search'
  },
  {
    title: 'Publicidad Digital',
    description: 'Campañas efectivas en Google Ads y redes sociales con presupuestos optimizados.',
    icon: 'ads'
  },
  {
    title: 'Redes Sociales',
    description: 'Gestión profesional de tus redes sociales para construir una comunidad engaged.',
    icon: 'social'
  },
  {
    title: 'Email Marketing',
    description: 'Estrategias de email marketing para nutrir leads y fidelizar clientes.',
    icon: 'email'
  },
  {
    title: 'Análisis y Reportes',
    description: 'Informes detallados y análisis de datos para optimizar tus campañas.',
    icon: 'analytics'
  }
];

const caseStudies = [
{
    title: 'Restaurante Local: +200% en Reservas',
    description: 'Estrategia combinada de SEO local y publicidad en redes sociales.',
    image: 'https://images.pexels.com/photos/2290070/pexels-photo-2290070.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2'
  },
  {
    title: 'Tienda Online: +150% en Ventas',
    description: 'Optimización de embudo de conversión y campañas de remarketing.',
    image: 'https://images.pexels.com/photos/3183197/pexels-photo-3183197.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2'
  },
  {
    title: 'Consultora B2B: +300% Leads',
    description: 'Marketing de contenidos y LinkedIn Ads para generación de leads.',
    image: 'https://images.pexels.com/photos/3182812/pexels-photo-3182812.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2'
  }
];
---

<section id="services" class="py-20">
  <div class="container mx-auto px-4">
    <div class="text-center mb-16" data-aos="fade-up">
      <h2 class="text-3xl md:text-4xl font-bold mb-4 text-neutral-800">Nuestros Servicios</h2>
      <div class="w-20 h-1 bg-primary-500 mx-auto mb-6"></div>
      <p class="text-lg text-neutral-600 max-w-3xl mx-auto">
        Soluciones de marketing digital diseñadas específicamente para las necesidades y presupuestos de pequeñas y medianas empresas.
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 mb-16">
      {services.map((area, index) => (
        <div class="bg-white p-6 rounded-xl shadow-md hover:shadow-lg transition-shadow border border-neutral-100" data-aos="fade-up" data-aos-delay={index * 100}>
          <div class="w-12 h-12 bg-primary-50 rounded-full flex items-center justify-center mb-4">
            <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-primary-500" fill="none" viewBox="0 0 24 24" stroke="currentColor">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d={
                area.icon === 'brain' ? 'M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253' :
                area.icon === 'chart-line' ? 'M7 12l3-3 3 3 4-4M8 21l4-4 4 4M3 4h18M4 4h16v12a1 1 0 01-1 1H5a1 1 0 01-1-1V4z' :
                area.icon === 'database' ? 'M4 7v10c0 2.21 3.582 4 8 4s8-1.79 8-4V7M4 7c0 2.21 3.582 4 8 4s8-1.79 8-4M4 7c0-2.21 3.582-4 8-4s8 1.79 8 4m0 5c0 2.21-3.582 4-8 4s-8-1.79-8-4' :
                area.icon === 'chart-pie' ? 'M11 3.055A9.001 9.001 0 1020.945 13H11V3.055z M20.488 9H15V3.512A9.025 9.025 0 0120.488 9z' :
                area.icon === 'robot' ? 'M9 3v2m6-2v2M9 19v2m6-2v2M5 9H3m2 6H3m18-6h-2m2 6h-2M7 19h10a2 2 0 002-2V7a2 2 0 00-2-2H7a2 2 0 00-2 2v10a2 2 0 002 2zM9 9h6v6H9V9z' :
                'M9.75 17L9 20l-1 1h8l-1-1-.75-3M3 13h18M5 17h14a2 2 0 002-2V5a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z'
              } />
            </svg>
          </div>
          <h3 class="text-xl font-semibold mb-3 text-neutral-800">{area.title}</h3>
          <p class="text-neutral-600">{area.description}</p>
        </div>
      ))}
    </div>

    <h3 class="text-2xl font-bold mb-8 text-center" data-aos="fade-up">Proyectos Destacados</h3>
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      {caseStudies.map((project, index) => (
        <div class="bg-white rounded-xl overflow-hidden shadow-md hover:shadow-xl transition-shadow" data-aos="fade-up" data-aos-delay={index * 150}>
          <img src={project.image} alt={project.title} class="w-full h-48 object-cover" />
          <div class="p-6">
            <h4 class="text-lg font-semibold mb-2 text-neutral-800">{project.title}</h4>
            <p class="text-neutral-600 mb-4">{project.description}</p>
            <a href="#" class="text-primary-500 font-medium hover:text-primary-600 inline-flex items-center">
              Leer más
              <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
              </svg>
            </a>
          </div>
        </div>
      ))}
    </div>

    <div class="text-center mt-12" data-aos="fade-up">
      <a href="/blog" class="inline-block px-6 py-3 rounded-full bg-white text-primary-500 font-medium border border-primary-500 hover:bg-primary-50 transition-colors">Ver más proyectos</a>
    </div>
  </div>
</section>
